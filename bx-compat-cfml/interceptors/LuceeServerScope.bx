import java:ortus.boxlang.runtime.types.immutable.ImmutableStruct;
import java:ortus.boxlang.runtime.scopes.Key;

/**
 * Adds collaborations to the server scope as per the lucee server
 */
class{

	/**
	 * Injections by BoxLang
	 */

	property name;
	property properties;
	property log;
	property interceptorService;
	property boxRuntime;
	property moduleRecord;

	function configure(){
		// Nothing to do here
	}

	/**
	 * Listen to scope creation
	 *
	 * Incoming data:
	 * - scope : The scope that was created
	 * - scopeName : The name of the scope
	 */
	function onServerScopeCreation( data ){
		// Add coldfusion struct
		data.scope.coldfusion = {
			"productlevel" : "os",
			"productname" : "Lucee",
			"productversion" : "2016,0,03,300357"
		}.toImmutable();

		// Add lucee struct
		data.scope.lucee = {
			"environment" : "boxlang",
			"loaderPath" : "",
			"loaderVersion" : "0",
			"release-date" : now(),
			"state" : "stable",
			"version" : "6.0.0",
			"versionName" : "Lucee",
			"versionNameExplanation" : ""
		}.toImmutable();
	}

}
